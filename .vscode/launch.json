{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Horse Simulator",
      "program": "${workspaceFolder}/src/main.ts",
      "args": ["-a"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "outFiles": []
    }
  ]
}
